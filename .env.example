# データベース設定
DATABASE_URL="postgresql://username:password@localhost:5432/shift_match_db"
DATABASE_URL_DIRECT="postgresql://username:password@localhost:5432/shift_match_db"

# JWT設定
JWT_SECRET="your-jwt-secret-key-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# サーバー設定
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# 外部API設定
OPENAI_API_KEY="your-openai-api-key-here"
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Firebase設定（プッシュ通知）
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# メール設定（OTP送信）
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis設定（セッション・キャッシュ）
REDIS_URL="redis://localhost:6379"

# 会計ソフト連携設定
FREEE_CLIENT_ID="your-freee-client-id"
FREEE_CLIENT_SECRET="your-freee-client-secret"
MF_CLIENT_ID="your-mf-client-id"
MF_CLIENT_SECRET="your-mf-client-secret"

# Google Calendar API
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# セキュリティ設定
BCRYPT_ROUNDS=12
OTP_SECRET="your-otp-secret-key"
ENCRYPTION_KEY="your-encryption-key-32-chars"

# フロントエンド環境変数
VITE_API_BASE_URL="http://localhost:3001/api"
VITE_SOCKET_URL="http://localhost:3001"
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
VITE_FIREBASE_CONFIG='{
  "apiKey": "your-api-key",
  "authDomain": "your-project.firebaseapp.com",
  "projectId": "your-project-id",
  "storageBucket": "your-project.appspot.com",
  "messagingSenderId": "123456789",
  "appId": "your-app-id"
}'